<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeeklyActivity">
    <Button
        android:id="@+id/dailybutton"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Daily"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/weeklybutton"
        android:background="#AD9292"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/monthlybutton"
        android:layout_toEndOf="@+id/dailybutton"
        android:text="weekly"
        app:layout_constraintEnd_toStartOf="@+id/monthlybutton"
        app:layout_constraintStart_toEndOf="@+id/dailybutton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/monthlybutton"
        android:layout_width="126dp"
        android:layout_height="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="Monthly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/weeklybutton"
        android:layout_below="@id/dailybutton"
        android:stretchColumns="*">
        <TableRow>
            <TextView
                android:text=" "
                android:padding="0dip"
                android:layout_column="0"
                android:layout_weight="1"
                    />

            <TextView
                android:layout_width="98dp"
                android:layout_column="0"
                android:layout_weight="1"
                android:padding="0dip"
                android:text="Morning"
                android:textSize="20sp"
                android:textAlignment="center"

                />
            <TextView
                android:text="Afternoon"
                android:textSize="20sp"
                android:padding="0dip"
                android:layout_column="0"
                android:layout_weight="1"
                android:textAlignment="center"
                />
            <TextView
                android:text="Evening"
                android:textSize="20sp"
                android:padding="0dip"
                android:layout_column="0"
                android:layout_weight="1"
                android:textAlignment="center"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/monday"
                android:text="Monday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="50dp"
                android:layout_column="0"
            />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/tuesday"
                android:text="Tuesday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/wednesday"
                android:text="Wednesday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/thursday"
                android:text="Thursday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/friday"
                android:text="Friday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/saturday"
                android:text="Saturday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/sunday"
                android:text="Sunday"
                android:padding="3dip"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
            <TextView
                android:textSize="20sp"
                android:padding="3dip"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:background="#FFFFFF"
                />
        </TableRow>


    </TableLayout>

    <Button
        android:id="@+id/backButton"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginEnd="144dp"
        app:layout_constraintTop_toBottomOf="@id/table"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Back"
        />

</androidx.constraintlayout.widget.ConstraintLayout>